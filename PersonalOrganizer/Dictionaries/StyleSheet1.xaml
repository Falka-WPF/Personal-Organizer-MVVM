<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="BaseStyle1">
        <Setter Property="ItemsControl.FontFamily" Value="18"/>
        <Setter Property="ItemsControl.FontWeight" Value="Bold"/>
        <Setter Property="ItemsControl.FontStyle" Value="Italic" />
        <Setter Property="ItemsControl.Margin" Value="5 0"/>
        <Setter Property="ItemsControl.Padding" Value="5 3 5 4"/>
    </Style>
    <Style TargetType="ComboBox" BasedOn="{StaticResource BaseStyle1}"/>


</ResourceDictionary>